<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    >

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramel_frap"
        android:layout_marginEnd="10dp"
        />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        >
        
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/product_title"
            android:fontFamily="sans-serif-condensed"
            android:text="Caramel frap"
            />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion producto"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/product_description"
            android:textSize="8sp"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/product_price"
        android:textSize="19sp"
        android:textStyle="bold"
        android:text="$100"
    />

</LinearLayout>